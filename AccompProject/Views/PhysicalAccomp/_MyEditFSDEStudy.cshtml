@model AccompProject.Models.FSDEContractStudyView

<style type="text/css">
    .ui-datepicker-calendar {
        display: none;
    }
</style>


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>



    <h4 class="modal-title" id="myModalLabel">Regional Office</h4>
    <h4>
        @Session["subproject"].ToString()
    </h4>

</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDAccomp)
            @Html.HiddenFor(model => model.IDStudy)



            <div class="form-group">





                <div class="col-md-2">
                    @Html.LabelFor(model => model.TypeofStudy, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.TypeofStudy, (IEnumerable<SelectListItem>)ViewBag.StatusProj, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TypeofStudy, "", new { @class = "text-danger" })
                </div>
            </div>


            <hr />

            <div class="form-group">
                <div class="col-md-2">

                    @Html.LabelFor(model => model.Consultant, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>


                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.IdConsultant, (IEnumerable<SelectListItem>)ViewBag.ConsultantList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdConsultant, "", new { @class = "text-danger" })
                </div>

            </div>

        </div>




    </div>




    <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Update" />
    </div>
}


