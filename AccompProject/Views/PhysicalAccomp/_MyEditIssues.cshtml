    @model AccompProject.Models.ProjectIssuesView



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>




    @if (User.IsInRole("Physical"))
    {
        <h4 class="modal-title" id="myModalLabel">Regional Office</h4>  <h4>
            @Session["subproject"].ToString()
        </h4>
    }
</div>

@using (Html.BeginForm())

{
    <div class="modal-body" >
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="row">
                <div class="col-md-offset-2 col-md-10">
                    <div class="alert alert-danger" style="display:none" role="alert" id="errormessage"></div>
                    <div class="alert alert-success" style="display:none" role="alert" id="successmessage"></div>
                </div>
            </div>

            @Html.Raw(TempData["msg"])


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.IDAccomp)
            @Html.HiddenFor(model => model.IDProblem)
            @Html.HiddenFor(model => model.mnt)
            @Html.HiddenFor(model => model.yr)
            @Html.HiddenFor(model => model.asof)
          
            @Html.HiddenFor(model => model.year)

            @Html.HiddenFor(model => model.Category1)
            @Html.HiddenFor(model => model.Category2)
            @Html.HiddenFor(model => model.Category3)
            @Html.HiddenFor(model => model.Category4)
            @Html.HiddenFor(model => model.municipality)

            @Html.HiddenFor(model => model.region)
            @Html.HiddenFor(model => model.province)
            @Html.HiddenFor(model => model.amount)
            @Html.HiddenFor(model => model.projectmonitor)
            @Html.HiddenFor(model => model.mainproject)
            @Html.HiddenFor(model => model.subproject)
            @Html.HiddenFor(model => model.username)
            @Html.HiddenFor(model => model.maindescription)
            @Html.HiddenFor(model => model.projectmonitor)
            @Html.HiddenFor(model => model.OperationRegion)
            @Html.HiddenFor(model => model.Expr1)
            @Html.HiddenFor(model => model.dateencoded)
            @Html.HiddenFor(model => model.issuesdescription)
            @Html.HiddenFor(model => model.problem)



            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.problem, "ISSUES AND PROBLEMS:", htmlAttributes: new { @class = "control-label" })
                </div>



            </div>
            @*<div class="form-group">

                <div class="col-md-12">
                    @Html.DropDownListFor(model => model.problem, (IEnumerable<SelectListItem>)ViewBag.problema, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.problem, "", new { @class = "text-danger" })
                </div>


            </div>


            <div class="form-group">
                <div class="col-md-12">
