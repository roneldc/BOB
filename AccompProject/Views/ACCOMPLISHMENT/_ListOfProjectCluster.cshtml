@using AccompProject.Helpers
@model  PagedList.IPagedList<AccompProject.Models.ToClusterView>
@using PagedList.Mvc;
@using PagedList;


@Html.Raw(TempData["msg"])


<br />

<div id="listofprojects" class="container-fluid">




    <div class="pagedList" data-jtv-target="#listofprojects">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.MinimalWithItemCountText)

    </div>

    <table id="customers" class="table table-hover">


        <tr>
            <th>
                Year
            </th>
            <th>
                Mainproject
            </th>
            <th>
                Province
            </th>
            <th>
                Subproject
            </th>
            <th>
                Municipality
            </th>
            <th>
                Allotment (P'000)
            </th>
            <th colspan="2" style="text-align:center">
                Actions
            </th>
        </tr>




        @foreach (var item in Model)
        {
            <tr class="oddnum">
                <td>
                    @Html.DisplayFor(modelItem => item.year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.maindescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subproject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.municipality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.amount)
                </td>




                <td>



                    <div class="btn-group">

                        <button type="button" class="btn btn-default">MENU SELECTION</button>

                        <button type="button" data-toggle="dropdown" class="btn btn-default dropdown-toggle"><span class="caret"></span></button>

                        <ul class="dropdown-menu">

                            <li>
                                  @Html.ActionLink("Remove", "Remove", "Accomplishment", new { id = item.IDCluster }, null)
                               
                            </li>



                    



                        </ul>

                    </div>



                </td>









            </tr>
        }

    </table>

</div>










