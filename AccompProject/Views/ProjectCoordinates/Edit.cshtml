@model AccompProject.Models.ProjectCoordinatesView

@{
    ViewBag.Title = "EDIT";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ProjectCoordinate - @Session["subproject"].ToString()</h4>


        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.idcoordinates)
        @Html.HiddenFor(model => model.IDAccomp)
        @Html.HiddenFor(model => model.status)


        <div class="form-group">
            @Html.LabelFor(model => model.lati, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.lati)
                @Html.ValidationMessageFor(model => model.lati)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.longi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.longi)
                @Html.ValidationMessageFor(model => model.longi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.IDAccomp, sub = Session["subproject"].ToString()})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
