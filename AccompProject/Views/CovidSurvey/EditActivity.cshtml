@model AccompProject.Models.PDS_Personalinfo_Active


@{
    ViewBag.Title = "My Diary";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">

            <div class="row">


                <div class="col-md-3">
                    @Html.LabelFor(model => model.lname, "NAME", htmlAttributes: new { @class = "control-label col-md-2" })

                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.lname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.lname, "", new { @class = "text-danger" })

                </div>

                <div class="col-md-3">
                    @Html.EditorFor(model => model.fname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.fname, "", new { @class = "text-danger" })

                </div>
                <div class="col-md-3">
                    @Html.EditorFor(model => model.mname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", Id = "amt" } })
                    @Html.ValidationMessageFor(model => model.mname, "", new { @class = "text-danger" })


                </div>

            </div>
        </div>

     
    </div>

}



<div id="myModal" class="modal fade in">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="myModalContent"></div>
        </div>
    </div>
</div>

<div class="form-group">

    <div class="row">
        <div id="replacetarget">
            @{


                Html.RenderAction("IndexActivity", "CovidSurvey", new { id = Model.New_ID });


            }


        </div>
    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">





    </script>
}
